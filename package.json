{
    "name": "synthetics-ci",
    "version": "0.0.1",
    "description": "Run Synthetics tests from your CI.",
    "main": "dist/index.js",
    "repository": "git@github.com:DataDog/synthetics-ci.git",
    "author": "Yoann Moinet <yoann.moinet@datadoghq.com>",
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "build": "tsc",
        "lint": "tslint -c .tslint.json 'src/**/*.ts'",
        "format": "yarn lint --fix",
        "prepare": "yarn build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "DISABLE_SPINNER=true lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{ts,tsx}": [
                "yarn format",
                "git add"
            ],
            "*.{ts,tsx}": [
                "tsc --noEmit"
            ],
            ".gitlab-ci.yml": [
                "yarn lint-gl"
            ]
        },
        "relative": true
    },
    "dependencies": {
        "chalk": "2.4.2",
        "glob": "7.1.4"
    },
    "devDependencies": {
        "@types/chalk": "2.2.0",
        "@types/glob": "7.1.1",
        "eslint": "6.0.1",
        "husky": "2.6.0",
        "lint-staged": "8.2.1",
        "tslint": "5.18.0",
        "typescript": "3.5.2"
    }
}
