{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "dist"
        ]
    },
    "jsRules": {},
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
        "interface-name" : [true, "never-prefix"],
        "semi": [
            "error",
            "always"
        ],
        "no-console": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ]
    },
    "rulesDirectory": []
}
